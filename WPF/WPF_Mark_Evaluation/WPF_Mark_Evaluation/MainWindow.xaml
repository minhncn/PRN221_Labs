<Window x:Class="WPF_Mark_Evaluation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Mark_Evaluation"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="0,0,0,-6">
        <DataGrid x:Name="dataGrid" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,146,0,0"/>
        <Label x:Name="statusLabel"/>

        <Label/>
        <TextBox Name="txtPath" HorizontalAlignment="Left" Margin="225,56,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="197"/>
        <Button Name="btnFile" Content="Browse File" HorizontalAlignment="Left" Margin="436,10,0,0" VerticalAlignment="Top" Width="118" Height="44" Click="btnFile_Click"/>
        <Button Name="btnImport" Content="Import File" HorizontalAlignment="Left" Margin="439,87,0,0" VerticalAlignment="Top" Height="43" Width="115" Click="btnImport_Click"/>
        <Button Name="btnClear" Content="Clear File" HorizontalAlignment="Left" Margin="573,53,0,0" VerticalAlignment="Top" Height="41" Width="112"/>
        <ComboBox Name="schoolYearComboBox" HorizontalAlignment="Left" Margin="37,54,0,0" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
